{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Create Event
{% endblock %}

{% block content %}
    <h1>Create Event</h1>

    {% if trainerCreate is not empty %}
        <div class="success alert-success fade in" role="success">
            <button type="button" class="close" data-dismiss="succes"><span aria-hidden="true">Ã—</span><span
                        class="sr-only">Close</span></button>
            <strong>Good!</strong> Trainer create.
        </div>
    {% endif %}

    <form id="loginForm" role="form" method="post">
        <div class="form-group">
            <label for="username">Title: </label>

            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
            </div>
        </div>

        <div class="form-group">
            <label for="password">Description: </label>

            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-pencil"></span></div>
                <textarea class="form-control" id="description" name="description" placeholder="Description"
                          required></textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="password">Price: </label>

            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-euro"></span></div>
                <input type="text" class="form-control" id="price" name="price" placeholder="Price" required>
            </div>
        </div>

        <div class="form-group">
            <label for="password">Localisation: </label>

            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></div>
                <input type="text" class="form-control" id="localisation" name="localisation" placeholder="Localisation"
                       required>
            </div>
        </div>


        <div class="form-group">
            <label for="password">Date: </label>

            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></div>
                <input type="date" class="form-control" id="date" name="date" placeholder="date" required>
            </div>
        </div>

        <div class="form-group">
            <label for="username">Picture: </label>

            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-picture"></span></div>
                <input type="text" class="form-control" id="picture" name="picture" placeholder=Picture required>
            </div>
        </div>


        <button type="submit" class="btn btn-primary">Create Event</button>
    </form>
{% endblock %}